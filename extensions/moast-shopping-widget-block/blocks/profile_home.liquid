<style>
  .moast-slider {
    width: 100%;
    height: 100%;
  }
</style>
<moast-slider style=" height: 100%;">
  <template shadowrootmode="open">
    <style>       
      :host swiper-container
      {
        width: 100%;
        height: 100%;
        padding: 20px 0 ;
      }
    
      :host swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: height 0.3s ease-in-out;
        width: 20%;
      }
    
      :host swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      :host .swiper-slide-active {
        width: auto;
      }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
    {% render "vite-tag" with "main.js" %}
    {% render "slider" %}
  </template>

</moast-slider>
{% schema %}
  {
    "name": "Moast Slider",
    "class": "moast-slider",
    "target": "section",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "product",
        "autofill": true
      }, {
        "type": "color",
        "id": "colour",
        "label": "Star Colour",
        "default": "#ff0000"
      }
    ]
  }
{% endschema %}